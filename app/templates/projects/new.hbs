{{outlet}}

<div class="ui segment">
  <div class="ui form">
    <div class="field">
      <div class="fields">
        <div class="five wide field">
          <Input @value={{model.project.name}} type="text" placeholder="Nom"/>
        </div>
        <div class="eleven wide field">
          <Input @value={{model.project.description}} type="text" placeholder="Description"/>
        </div>
      </div>
      <div class="fields">
        <div class="four wide field">
          <Input @value={{model.project.startDate}} type="text" placeholder="Date debut"/>
        </div>
        <div class="four wide field">
          <Input @value={{model.project.dueDate}} type="text" placeholder="Date fin"/>
        </div>
        <div class="eight wide field">
          {{#ui-dropdown class="selection" onChange=(action (mut model.project.owner)) as |execute mapper|}}
            <div class="default text">Proprietaire</div>
            <i class="dropdown icon"></i>
            <div class="menu">
              {{#each model.developers as |developer|}}
                <div data-value="{{map-value mapper developer}}" class="item">
                  {{developer.identity}}
                </div>
              {{/each}}
            </div>
          {{/ui-dropdown}}
        </div>
      </div>
    </div>
    <button class="ui primary button" {{action "nouveau" model.project}}>Ajouter</button>
    <button class="ui red button" {{action "retour"}}>Retour</button>

  </div>
</div>